@model Stage1.UI.Models.AddBookingViewModel

@{
    <h2>Add Booking</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(p => p.GuestId)

        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <label asp-for=BookingDateTime class="control-label">Booking Date/Time</label>
                <input asp-for=BookingDateTime class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for=SelectedRestaurantId class="control-label">Select Restaurant</label>
                <select asp-for=SelectedRestaurantId asp-items=Model.Restaurants class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", nameof(Stage1.UI.Controllers.GuestsController.Details), new { Id = Model.GuestId })
    </div>
}
